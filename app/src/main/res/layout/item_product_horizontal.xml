<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="230dp"
    android:layout_margin="3dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:scaleType="fitCenter"
            android:background="@color/grey_400"
            app:srcCompat="@drawable/as_square_placeholder" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/grey_900"
            android:text="@string/lorem_ipsum"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="4dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="12dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_rupee_24"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_real_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="@drawable/s_strick_through"

                android:text="0"
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/repeeicon"
                android:layout_width="11dp"
                android:layout_marginStart="6dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_rupee_24"
                app:tint="@color/teal_700" />

            <TextView
                android:id="@+id/offset_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="0 off"
                android:textColor="@color/teal_700"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="3dp"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/book_writer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Writer: name"
                android:textSize="12sp"
                android:textColor="@color/grey_600"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/book_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type: Refhurbijhsed"
                android:textSize="11sp"
                android:textColor="@color/grey_600"
                android:maxLines="1"
                android:ellipsize="end"
                />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>