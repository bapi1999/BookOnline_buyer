<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_nav_graph"
    app:startDestination="@id/productFragment">


    <fragment
        android:id="@+id/productFragment"
        android:name="com.sbdevs.bookonline.fragments.ProductFragment"
        android:label="fragment_product"
        tools:layout="@layout/fragment_product" >
        <action
            android:id="@+id/action_productFragment_to_rateNowFragment"
            app:destination="@id/rateNowFragment" />
        <action
            android:id="@+id/action_productFragment_to_allRatingFragment"
            app:destination="@id/allRatingFragment" />
        <action
            android:id="@+id/action_productFragment_to_productImageFragment"
            app:destination="@id/productImageFragment" />

    </fragment>
    <fragment
        android:id="@+id/rateNowFragment"
        android:name="com.sbdevs.bookonline.fragments.RateNowFragment"
        android:label="fragment_rate_now"
        tools:layout="@layout/fragment_rate_now" >
        <argument
            android:name="product_Id"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/allRatingFragment"
        android:name="com.sbdevs.bookonline.fragments.user.AllReviewFragment"
        android:label="fragment_all_rating"
        tools:layout="@layout/fragment_all_review" >
        <argument
            android:name="product_Id"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/productImageFragment"
        android:name="com.sbdevs.bookonline.fragments.ProductImageFragment"
        android:label="fragment_product_image"
        tools:layout="@layout/fragment_product_image" >
        <argument
            android:name="product_url"
            app:argType="string" />
    </fragment>

</navigation>